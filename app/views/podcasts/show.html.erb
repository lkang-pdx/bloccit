<h1><%= @podcast.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @podcast.body %></p>
    <p><%= @podcast.price %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_topic_podcast_path(@podcast.topic, @podcast), class: 'btn btn-success' %>
    <%= link_to "Delete Post", [@podcast.topic, @podcast], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this podcast?' } %>
  </div>
</div>
